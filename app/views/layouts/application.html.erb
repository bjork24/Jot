<!DOCTYPE html>
<html>
<head>
  <title>Jot</title>
  <%= stylesheet_link_tag "bootstrap.min", "bootstrap-responsive.min", "screen" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
<% end %>

<%= yield %>

</body>
</html>
